%div{ class: "topbar"}
  %h1 hospitals
= form_tag hospitals_path, method: :get, class: "form-search", role: "search" do
  .input-group
    =text_field_tag 'search', params[:search], class: "form-control", id: "srch-term", placeholder: "Search"
    .input-group-btn
      %button.btn.btn-default{:style => "width:40px;"}
        %span.glyphicon.glyphicon-search
%div{class: "info"}
  - @hospitals.each do |hospital|
    = hospital.name
    = hospital.location
    = link_to 'Show', hospital_path(hospital), class: "back"
    = link_to 'Edit', edit_hospital_path(hospital), class: "back"
    = link_to 'Destroy', hospital_path(hospital), method: :delete, class: "back"
    %br
%div
    
